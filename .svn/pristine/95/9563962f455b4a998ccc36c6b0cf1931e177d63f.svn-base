
SELECT 
	  lp.`numeroPedido`
	 ,lp.`SaldoCliente` AS 'Saldo Cliente' 
	 ,lp.`SaldoFabrica` AS 'Saldo Fabrica'
	 ,(lp.`SaldoCliente` - lp.`SaldoFabrica`) AS 'Dif.'
	 ,(lp.`SaldoVendedor1` + lp.`SaldoVendedor2` ) AS 'a Favor'
	 ,(lp.`SaldoVendedor1` + lp.`SaldoVendedor2` )-(lp.`SaldoCliente` - lp.`SaldoFabrica`) AS 'Saldo'
 FROM v_listadopedidoextendido lp
 WHERE 
	lp.`estado_sec` IN (0,1,2)
	AND (lp.`SaldoVendedor1` + lp.`SaldoVendedor2` )-(lp.`SaldoCliente` - lp.`SaldoFabrica`)<>0
